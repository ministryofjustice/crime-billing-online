= render partial: 'shared/new_evidence_checklist'

- if current_user_persona_is?(CaseWorker) && @claim.documents.none?
  %p.govuk-body
    = t('.no_documents_uploaded')

- else
  .govuk-summary-card.custom-summary-card
    .govuk-summary-card__title-wrapper
      %h2.govuk-summary-card__title=t('.existing_evidence')
      = govuk_link_to t('shared.download_all_html', context: t('.existing_evidence')), download_zip_case_workers_claim_path(@claim), class: 'govuk-!-font-weight-bold'
    .govuk-summary-card__content
      %dl.govuk-summary-list
        .govuk-summary-list__row
          %dt.govuk-summary-list__key.file-name= t('.name_of_file')
          %dt.govuk-summary-list__key.file-info= t('.file_size')
          %dt.govuk-summary-list__key.file-info= t('.date_added')

        - @claim.documents.includes(:document_blob, :converted_preview_document_attachment).each do |document|
          .govuk-summary-list__row
            %dd.govuk-summary-list__value.file-name= govuk_link_to document.document_file_name, download_document_path(document)
            %dd.govuk-summary-list__value.file-info= number_to_human_size(document.document_file_size)
            %dd.govuk-summary-list__value.file-info= document.created_at.strftime(Settings.date_format)
